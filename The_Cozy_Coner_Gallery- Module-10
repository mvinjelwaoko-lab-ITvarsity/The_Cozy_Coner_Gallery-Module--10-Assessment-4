<body>

  <h1>The Cozy Corner</h1>

  <div class="gallery" id="gallery">
    <img src="https://picsum.photos/300?random=1" alt="Image 1" />
    <img src="https://picsum.photos/300?random=2" alt="Image 2" />
    <img src="https://picsum.photos/300?random=3" alt="Image 3" />
    <img src="https://picsum.photos/300?random=4" alt="Image 4" />
    <img src="https://picsum.photos/300?random=5" alt="Image 5" />
  </div>

  <div id="popup" onclick="closePopup()">
    <img id="popupImg" src="" alt="Large View" />
  </div>

  <script>
    const gallery = document.getElementById("gallery");
    const popup = document.getElementById("popup");
    const popupImg = document.getElementById("popupImg");

    gallery.addEventListener("click", function (e) {
      if (e.target.tagName === "IMG") {
        popupImg.src = e.target.src;
        popup.style.display = "flex";
      }
    });

    function closePopup() {
      popup.style.display = "none";
    }
  </script>

</body>
